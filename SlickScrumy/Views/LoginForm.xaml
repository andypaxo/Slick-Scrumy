<UserControl x:Class="SlickScrumy.Views.LoginForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="134" d:DesignWidth="273">
    
    <Grid x:Name="LayoutRoot" Background="White">
            <TextBox Height="23" HorizontalAlignment="Left" Margin="135,12,0,0" Name="uxUsername" VerticalAlignment="Top" Width="120" />
            <PasswordBox Height="23" HorizontalAlignment="Left" Margin="135,46,0,0" Name="uxPassword" VerticalAlignment="Top" Width="120" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="textBlock1" Text="Username" VerticalAlignment="Top" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,46,0,0" Name="textBlock2" Text="Password" VerticalAlignment="Top" />
            <Button Click="uxLogin_Click" Content="Log In" Height="23" HorizontalAlignment="Left" Margin="180,83,0,0" Name="uxLogin" VerticalAlignment="Top" Width="75" />
    </Grid>
</UserControl>
